
#include <iostream>
using namespace std;
int main() {
    int a,b;
    int ch;
    cout<<"Enter 2 integers";
    cin>>a>>b;
    cout<<a<<b;
    cout<<"choose from menu\n";
    cout<<"1.ADD\n";
    cout<<"2.Subtract\n";
    cout<<"3.Multiply\n";
    cout<<"4.Division\n";
    cout<<"5.EXIT\n";
    while(ch!=5){
    cout<<"enter your choice";
     cin>>ch;
    switch(ch)
    {
        case 1:
        cout<<a+b;
        break;
        case 2:
        cout<<a-b;
        break;
        case 3:
        cout<<a*b;
        break;
        case 4:
        cout<<a/b;
        break;
        case 5:
        cout<<"Exit";
        break;
        default:
        cout<<"Invalid choice";
    }
    }
    return 0;
}
